#ifndef STUDENTCOURSE_H_
#define STUDENTCOURSE_H_
#include <iostream>
#include <string>
#include "Person.h"
#include <vector>

namespace edu {
namespace neu {
namespace csye6205 {

class Student;

class Course {
    private:
    string courseName;
    vector <Student> students;
    string instructor;


    public:
    Course();
    virtual ~Course();

    string getCourseName();
    void setCourseName(string s);
    string getTeacher();
    void setTeacher(string t);
    double avgGrade();

};



class Student:public Person {

private:
 const int Student_id = 001;
        string major;
        double grade;
        Course course;
        vector<Course> courses;



public:
        Student(string name, int age, string gender,int id, string major, double grade);
        virtual ~Student();

        virtual string getName();
        virtual void setName(string n);
        virtual int getAge();
        virtual void setAge(int a);
        virtual string getGender();
        virtual void setGender(string g);

        const int getStudent_id();
        Course getCourse();
        //     void setCourse(string c);
        string getMajor();
        void setMajor(string m);
        double getGrade();
        void setGrade(double g);
        void enroll(Course course);
        };




} /* namespace csye6205 */
} /* namespace neu */
} /* namespace edu */

#endif /* STUDENTCOURSE_H_ */
